<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/app"
        style="@style/statusButtonStyle"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:background="#08ffffff"
        android:scaleType="center"
        android:src="@drawable/stat_rotate" />

    <ImageView
        android:layout_width="1dip"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/cancel"
        style="@style/statusButtonStyle"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_action_cancel" />

    <ImageView style="@style/statusButtonDividerStyle" />

    <ImageView
        android:id="@+id/rotate0"
        style="@style/statusButtonStyle"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_roate_0" />

    <ImageView style="@style/statusButtonDividerStyle" />

    <ImageView
        android:id="@+id/rotate2"
        style="@style/statusButtonStyle"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_roate_2" />

    <ImageView style="@style/statusButtonDividerStyle" />

    <ImageView
        android:id="@+id/rotate3"
        style="@style/statusButtonStyle"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_roate_3" />

    <ImageView style="@style/statusButtonDividerStyle" />

    <ImageView
        android:id="@+id/rotate1"
        style="@style/statusButtonStyle"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_roate_1" />

</LinearLayout>